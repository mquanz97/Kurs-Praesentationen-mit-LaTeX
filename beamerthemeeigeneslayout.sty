}

%%%%%%%%%%%%%%%% Titelfolie %%%%%%%%%%%%%%%%%%%

\newlength{\Abstandlinks}
\setlength{\Abstandlinks}{20pt}

\setbeamertemplate{title page}{
	\vspace*{10mm}
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}
		\hspace*{\Abstandlinks}
		\hspace*{-2ex}
		\usebeamerfont{title}
		\inserttitle
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.03\paperwidth]{Title}
		\usebeamerfont{subtitle}
		\hspace*{\Abstandlinks}
		\hspace*{-1.5ex}
		\vspace*{-10pt}
		\insertsubtitle
		
	\end{beamercolorbox}

	\begin{beamercolorbox}[wd=\paperwidth,ht=0.03\paperwidth]{Title}
		\vspace*{-1.5ex}
		\hspace*{\Abstandlinks}
		\hspace*{-1.5ex}
		\begin{tikzpicture}
			\fill[ETred] (0,0) rectangle(30em, 0.05em);
		\end{tikzpicture}
	\end{beamercolorbox}

	\begin{beamercolorbox}[wd=\paperwidth, ht=0.06\paperwidth]{Title}
	\hspace*{\Abstandlinks}
	\insertauthor
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.03\paperwidth]{Title}
		\hspace*{\Abstandlinks}
		\insertinstitute
	\end{beamercolorbox}
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.07\paperwidth]{Title}
		\hspace*{\Abstandlinks}
		\vspace*{20pt}
		\insertdate
	\end{beamercolorbox}

}

